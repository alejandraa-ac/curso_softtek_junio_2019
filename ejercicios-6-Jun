function formatDate(userDate) {
  // format from M/D/YYYY to YYYYMMDD
  
  var a=userDate.substr(0,2);  
  var aa = parseInt(a);
  console.log(aa);
  
  var b=userDate.substr(3,2);
  var bb=parseInt(b);
  console.log(bb);
  
  var c=userDate.substr(-4)
  var cc=parseInt(c);
    console.log(cc);
  
}

console.log(formatDate("12/31/2014"));

